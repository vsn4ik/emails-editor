{
    "private": true,
    "name": "@vsn4ik/emails-editor",
    "version": "1.0.0",
    "description": "Emails Editor",
    "license": "MIT",
    "repository": "vsn4ik/emails-editor",
    "files": [
        "/dist",
        "/src"
    ],
    "main": "dist/emails-editor.js",
    "main:umd": "dist/emails-editor.umd.js",
    "module": "src/emails-editor.js",
    "type": "module",
    "scripts": {
        "build": "rollup --config",
        "build:docs": "cp -rf ./dist ./docs/",
        "build:dev": "cp -rf ./dist ./tests/html/",
        "watch": "rollup --config --watch",
        "serve": "serve --listen 5000 --no-clipboard ./tests/html/",
        "docs:screenshots": "node --harmony-top-level-await ./docs/screenshots.js",
        "test": "jest"
    },
    "devDependencies": {
        "@babel/cli": "^7.10.5",
        "@babel/core": "^7.11.1",
        "@babel/plugin-proposal-class-properties": "^7.10.4",
        "@babel/runtime": "^7.11.2",
        "@rollup/plugin-commonjs": "^14.0.0",
        "@rollup/plugin-node-resolve": "^8.4.0",
        "jest": "^26.3.0",
        "jest-image-snapshot": "^4.1.0",
        "postcss-url": "^8.0.0",
        "puppeteer": "^5.2.1",
        "rollup": "^2.23.1",
        "rollup-plugin-babel": "^4.4.0",
        "rollup-plugin-postcss": "^3.1.5",
        "serve": "^11.3.2"
    }
}
